{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "plugins": [{
      "name": "typescript-styled-plugin"
    }]
  },
  "include": [
    "src/**/*"
  ]
}